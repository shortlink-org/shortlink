    "version": "0.2.0",
    "configurations": [
        {
            "name": "sortlink-api [go:build]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}/internal/services/api/cmd"
        },
        {
            "name": "sortlink-api [k8s:attach]",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "language": "Go",
            "debugPort": 56268,
            "podSelector": {
                "app": "sortlink-api"
            },
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
        }

    ]
}
