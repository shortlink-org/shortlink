    "react-dom": "19.0.0",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "22.10.1",
    "@types/react": "18.3.14",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
