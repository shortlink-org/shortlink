{
  "name": "shortlink",
  "description": "A simple URL shortener",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--no-webstorage' wxt",
    "dev:firefox": "NODE_OPTIONS='--no-webstorage' wxt -b firefox",
    "build": "NODE_OPTIONS='--no-webstorage' wxt build",
    "build:firefox": "NODE_OPTIONS='--no-webstorage' wxt build -b firefox",
    "zip": "NODE_OPTIONS='--no-webstorage' wxt zip",
    "zip:firefox": "NODE_OPTIONS='--no-webstorage' wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "NODE_OPTIONS='--no-webstorage' wxt prepare"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "@tailwindcss/postcss": "^4.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.27",
    "postcss": "^8.5.6",
    "tailwindcss": "4.2.1",
    "typescript": "^5.9.3",
    "wxt": "^0.20.18"
  },
  "packageManager": "pnpm@10.30.3"
}
