{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "additionalProperties": true,
    "description": "Schema for Helm values",
    "properties": {
        "deploy": {
            "properties": {
                "affinity": {
                    "type": "array"
                },
                "annotations": {
                    "properties": {},
                    "type": "object"
                },
                "env": {
                    "properties": {
                "AUTH_URI": {
                    "type": "string"
                },
                "GRPC_CLIENT_HOST": {
                    "type": "string"
                },
                "GRPC_CLIENT_TIMEOUT": {
                    "type": "string"
                },
                "SPICE_DB_API": {
                    "type": "string"
                },
                "SPICE_DB_TIMEOUT": {
                    "type": "string"
                },
                "STORE_REDIS_URI": {
                    "type": "string"
                },
                "STORE_TYPE": {
                    "type": "string"
                },
                "TRACER_URI": {
                    "type": "string"
                }
                    },
                    "type": "object"
                },
                "image": {
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "livenessProbe": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "httpGet": {
                            "properties": {
                                "path": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "nodeSelector": {
                    "type": "array"
                },
                "podSecurityContext": {
                    "properties": {
                        "fsGroup": {
                            "type": "integer"
                        }
                    },
                    "type": "object"
                },
                "readinessProbe": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "httpGet": {
                            "properties": {
                                "path": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "replicaCount": {
                    "type": "integer"
                },
                "resources": {
                    "properties": {
                        "limits": {
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "requests": {
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "securityContext": {
                    "properties": {
                        "allowPrivilegeEscalation": {
                            "type": "boolean"
                        },
                        "capabilities": {
                            "properties": {
                                "drop": {
                                    "items": {
                                        "type": "string"
                                    },
                                    "type": "array"
                                }
                            },
                            "type": "object"
                        },
                        "readOnlyRootFilesystem": {
                            "type": "string"
                        },
                        "runAsGroup": {
                            "type": "integer"
                        },
                        "runAsNonRoot": {
                            "type": "boolean"
                        },
                        "runAsUser": {
                            "type": "integer"
                        }
                    },
                    "type": "object"
                },
                "tolerations": {
                    "type": "array"
                }
            },
            "type": "object"
        },
        "ingress": {
            "properties": {
                "annotations": {
                    "properties": {
                        "cert-manager.io/cluster-issuer": {
                            "type": "string"
                        },
                        "nginx.ingress.kubernetes.io/enable-opentelemetry": {
                            "type": "string"
                        },
                        "nginx.ingress.kubernetes.io/enable-owasp-core-rules": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hostname": {
                    "type": "string"
                },
                "ingressClassName": {
                    "type": "string"
                },
                "paths": {
                    "items": {
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "service": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "port": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "istio": {
            "properties": {
                "plugin": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "monitoring": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "networkPolicy": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "ingress": {
                    "items": {
                        "properties": {
                            "from": {
                                "items": {
                                    "properties": {
                                        "namespaceSelector": {
                                            "properties": {
                                                "matchLabels": {
                                                    "properties": {
                                                        "kubernetes.io/metadata.name": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                },
                                "type": "array"
                            }
                        },
                        "type": "object"
                    },
                    "type": "array"
                },
                "policyTypes": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "podDisruptionBudget": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "service": {
            "properties": {
                "ports": {
                    "items": {
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "port": {
                                "type": "integer"
                            },
                            "protocol": {
                                "type": "string"
                            },
                            "public": {
                                "type": "boolean"
                            }
                        },
                        "type": "object"
                    },
                    "type": "array"
                },
                "type": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "serviceAccount": {
            "properties": {
                "create": {
                    "type": "boolean"
                }
            },
            "type": "object"
        }
    },
    "title": "Helm Values Schema",
    "type": "object"
}
