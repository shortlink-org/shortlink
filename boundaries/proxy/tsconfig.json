{
  "compilerOptions": {
    /* ----------- Modern TS + ESM ----------- */
    "target": "ES2022",
    "module": "ESNext",

    /* Modern, correct, safe resolver for ESM/Vite/Vitest/Fastify */
    "moduleResolution": "bundler",

    /* Include all modern JS libs */
    "lib": ["ESNext"],

    /* Allow importing .js while authoring .ts */
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",

    /* No emit errors from external libs */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ----------- Strict mode ----------- */
    "strict": true,
    "noImplicitAny": true,

    /* ----------- Paths for CA/DDD ----------- */
    "baseUrl": "./src",
    "paths": {
      "@/domain/*": ["proxy/domain/*"],
      "@/application/*": ["proxy/application/*"],
      "@/infrastructure/*": ["proxy/infrastructure/*"]
    },

    /* ----------- Types ----------- */
    "types": ["node", "vitest/globals"]
  },

  /* ----------- Included files ----------- */
  "include": ["./src/**/*", "prisma"],
  "exclude": ["node_modules"]
}
